<!-- Register modal -->
<div class="modal fade" tabindex="-1" role="dialog" id="register" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div id="register-header" class="modal-header visible">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Register</h4>
      </div>

      <div id="register-header-error" class="model-header hidden">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Register Error:</h4>
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span>
          Incorrect email or passwords don't match. Please try again. 
       </div>
      </div>

      <div class="modal-body">
        <!-- The form is placed inside the body of modal -->
        <form id="loginForm" method="POST" action="/users" class="form-horizontal">
          <div class="form-group">
            <label class="col-xs-3 control-label">Username</label>
            <div class="col-xs-5">
              <input type="text" class="form-control" name="user[username]" placeholder="e.g., danaScully" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-xs-3 control-label">Email</label>
            <div class="col-xs-5">
              <input type="email" class="form-control" name="user[email]" placeholder="e.g., dana.scully@fbi.gov" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-xs-3 control-label">Password</label>
            <div class="col-xs-5">
              <input type="password" class="form-control" name="user[password]" placeholder="e.g., ******" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-xs-3 control-label">Retype Password</label>
            <div class="col-xs-5">
              <input type="password" class="form-control" name="user[password_confirmation]" placeholder="e.g., ******" />
            </div>
          </div>

          <div class="form-group">
            <div class="col-xs-5 col-xs-offset-3">
              <button type="submit" class="btn btn-primary">Register</button>
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
          </div>
        </form>  
      </div>
    </div>
  </div>
</div>